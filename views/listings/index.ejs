<% layout('layouts/boilerplate') %>

    <div id="filters-wrapper">
        <div class="scroll-fade-left"></div>
        <div id="filters">
            <a href="/listings/trending" class="filter">
                <i class="fa-solid fa-fire"></i>
                <p>Trending</p>
            </a>
            <a href="/listings/category/beaches" class="filter">
                <i class="fa-solid fa-umbrella-beach"></i>
                <p>Beach</p>
            </a>
            <a href="/listings/category/mountains" class="filter">
                <i class="fa-solid fa-mountain-sun"></i>
                <p>Mountain</p>
            </a>
            <a href="/listings/category/apartments" class="filter">
                <i class="fa-solid fa-buildings"></i>
                <p>Apartment</p>
            </a>
            <a href="/listings/category/rooms" class="filter">
                <i class="fa-solid fa-bed"></i>
                <p>Room</p>
            </a>
        </div>
        <div class="scroll-fade-right"></div>
    </div>

    <% if(allListings.length === 0) { %>
        
        <div class="row mt-3">
            <div class="col-12 text-center d-flex flex-column align-items-center justify-content-center" 
                 style="min-height: 60vh;">
                <i class="fa-regular fa-face-frown-open fa-3x text-muted mb-3"></i>
                <h3 class="fw-bold text-muted">No matches found</h3>
                <p class="text-muted mb-4">Try changing your search or category filter.</p>
                
                <a href="/listings" class="btn btn-outline-dark rounded-pill px-4">
                    View All Listings
                </a>
            </div>
        </div>

    <% } else { %>

        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
            <% for(let listing of allListings) { %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card col listing-card">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image"
                        style="height: 20rem; object-fit: cover;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <span class="listing-title">
                                <%= listing.title %>
                            </span> <br>
                            <span class="listing-price">&#8377;<%= listing.price.toLocaleString("en-IN") %></span>
                            <span class="listing-period">/ night</span>
                        </p>
                    </div>
                </div>
            </a>
            <% } %>
        </div>
        
    <% } %>